<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".hotel_schedule">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hotelScheduleTopToolbar"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#FFE86B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hotelScheduleBottomToolbar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#F9A825"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/hotelScheduleToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <ImageView
                android:id="@+id/hotelScheduleHomeIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/home"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/hotelScheduleNotifIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/notif"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/hotelScheduleSearchIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/search"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/hotelScheduleAccountIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/acc_setting"
                android:scaleType="centerInside" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Heading Text -->
    <TextView
        android:id="@+id/hotelScheduleHeadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel Schedule"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/hotelScheduleTopToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
    <!-- CardView with RecyclerView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/hotelScheduleCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/hotelScheduleHeadingText"
        app:layout_constraintBottom_toTopOf="@id/hotelScheduleBottomToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hotelScheduleRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>