<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home">

    <!-- ScrollView with content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Inner ConstraintLayout for scrollable content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Toolbar/Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#FFE86B"
                android:id="@+id/topLayout"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/logoicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/profile"
                    android:contentDescription="App profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Tour_travel"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    app:layout_constraintTop_toTopOf="@id/logoicon"
                    app:layout_constraintBottom_toBottomOf="@id/logoicon"
                    app:layout_constraintStart_toEndOf="@id/logoicon" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Logout"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/logoicon"
                    app:layout_constraintTop_toTopOf="@id/logoicon"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Banner Image -->
            <ImageView
                android:id="@+id/banner"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/discount"
                app:layout_constraintTop_toBottomOf="@id/topLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- All rows start here -->
            <!-- Use your existing buttons/images/textviews below -->
            <!-- I am using only 1st row here for sample -->
            <!-- REPEAT your rows just like in your current layout -->

            <!-- Row 1 - Flight -->
            <ImageView
                android:id="@+id/jhaj"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/jhaaj"
                app:layout_constraintTop_toBottomOf="@id/banner"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="DuplicateIds" />

            <!-- First Row -->
            <ImageView
                android:id="@+id/jhaj"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/jhaaj"
                app:layout_constraintTop_toBottomOf="@id/banner"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/jhajLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flight"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/jhaj"
                app:layout_constraintStart_toStartOf="@id/jhaj"
                app:layout_constraintEnd_toEndOf="@id/jhaj"
                app:layout_constraintHorizontal_bias="0.5" />

            <ImageView
                android:id="@+id/train"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/train"
                app:layout_constraintTop_toTopOf="@id/jhaj"
                app:layout_constraintStart_toEndOf="@id/jhaj" />

            <TextView
                android:id="@+id/trainLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/train"
                app:layout_constraintStart_toStartOf="@id/train"
                app:layout_constraintEnd_toEndOf="@id/train" />

            <ImageView
                android:id="@+id/hotel"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/hotel2"
                app:layout_constraintTop_toTopOf="@id/train"
                app:layout_constraintStart_toEndOf="@id/train" />

            <TextView
                android:id="@+id/hotelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/hotel"
                app:layout_constraintStart_toStartOf="@id/hotel"
                app:layout_constraintEnd_toEndOf="@id/hotel" />

            <!-- Second Row -->
            <ImageView
                android:id="@+id/insurance"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/insurance"
                app:layout_constraintTop_toBottomOf="@id/train"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/insuranceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/insurance"
                app:layout_constraintStart_toStartOf="@id/insurance"
                app:layout_constraintEnd_toEndOf="@id/insurance" />

            <ImageView
                android:id="@+id/restaurant"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/resturamt"
                app:layout_constraintTop_toTopOf="@id/insurance"
                app:layout_constraintStart_toStartOf="@id/train" />

            <TextView
                android:id="@+id/restaurantLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/restaurant"
                app:layout_constraintStart_toStartOf="@id/restaurant"
                app:layout_constraintEnd_toEndOf="@id/restaurant" />

            <ImageView
                android:id="@+id/car"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/car"
                app:layout_constraintTop_toTopOf="@id/insurance"
                app:layout_constraintStart_toEndOf="@id/restaurant" />

            <TextView
                android:id="@+id/carLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Rentals"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/car"
                app:layout_constraintStart_toStartOf="@id/car"
                app:layout_constraintEnd_toEndOf="@id/car" />

            <!-- Third Row -->
            <ImageView
                android:id="@+id/coupon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/coupons"
                app:layout_constraintTop_toBottomOf="@id/restaurant"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/couponLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupans"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/coupon"
                app:layout_constraintStart_toStartOf="@id/coupon"
                app:layout_constraintEnd_toEndOf="@id/coupon" />

            <ImageView
                android:id="@+id/event"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/event"
                app:layout_constraintTop_toTopOf="@id/coupon"
                app:layout_constraintStart_toStartOf="@id/train" />

            <TextView
                android:id="@+id/eventLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/event"
                app:layout_constraintStart_toStartOf="@id/event"
                app:layout_constraintEnd_toEndOf="@id/event" />

            <ImageView
                android:id="@+id/destination"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/place"
                app:layout_constraintTop_toTopOf="@id/coupon"
                app:layout_constraintStart_toEndOf="@id/event" />
            <TextView
                android:id="@+id/destinationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/destination"
                app:layout_constraintStart_toStartOf="@id/destination"
                app:layout_constraintEnd_toEndOf="@id/destination" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Toolbar (Fixed) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottomToolbar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#F9A825"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/home"
                android:contentDescription="Home"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/notif"
                android:contentDescription="Notifications"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/search"
                android:contentDescription="Search"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/acc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/acc_setting"
                android:contentDescription="Profile"
                android:scaleType="centerInside" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>
